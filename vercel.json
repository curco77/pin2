{
  "version": 2,
  "builds": [
    {
      "src": "api/log.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": ["api/**"],
        "maxLambdaSize": "10mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/log",
      "dest": "/api/log.js",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html",
      "status": 200
    }
  ]
}